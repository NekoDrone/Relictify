@using AddChar
@using Relictify.Backend.Characters
@using Relictify.Backend.WebStorage
@using Relictify.StateManagement
@inject IEntryStore CharEntries
<div>
    @foreach (CharacterEntry character in _chars)
    {
        <CharSelectorButton Character="character.Character"/>
    }
    <AddCharButton/>
</div>

@code {
    private int _totalChars;
    private List<CharacterEntry> _chars = null!;

    protected override void OnInitialized()
    {
        this._chars = CharEntries.GetAllEntriesList();
    }
}