@page "/chartest"
@using Relictify
@inject HttpClient Http

    <head>
        <link href="Relictify.styles.css" rel="stylesheet" />
    </head>


<style>
    .characterSelector {
        display: grid;
        grid-template-columns: repeat(3, 200px);
    }

    .characterBox {
        width: 175px;
        margin: auto;
        text-align: center;
    }
</style>
<div class="characterSelector">
    @foreach (Character character in charactersList)
    {
        <div class="characterBox">
            <img src="favicon.png"/>
            <p>@character.Name</p>
        </div>
    }
</div>
    

@code {
    private List<Character> charactersList = new List<Character>();

    protected override async Task OnInitializedAsync()
    {
        charactersList = await Http.GetFromJsonAsync<List<Character>>("data/CharactersList.json");
    }
    //need to somehow figure out how to render this component /above/ the main screen.
}
